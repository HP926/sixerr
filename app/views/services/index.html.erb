<p id="notice"><%= notice %></p>
    
<h1 class="page-header header"><span class="glyphicon glyphicon-transfer" aria-hidden="true"></span> Services</h1>
   
<div class="jumbotron">
  <div class="row">
  
  <div class='col-sm-8'>
    
    <h1>Check it out!</h1>
    <p>Here you can view and purchase our services, which are provided by other users!  Need some cash?  Have extra time on your hands?  Can't find a job?  Sign up if you want to offer a service!</p>
  </div>
  <div class='col-sm-4'>
    
    <%= image_tag 'http://i.imgur.com/Ok8fpB6.png', class: 'img img-responsive' %>
  </div>
  </div>


</div>

<div class="row">
  <% @services.each do |s| %>

    <div class="col-sm-12 col-md-4">
      <div class="thumbnail span3">
         <%= image_tag s.image.url(:square), alt: "Responsive image" %>
        <div class="caption">
          <h3><%= s.title %></h3>
          <p><%= s.description %></p>

          <% if s.user == current_user %>
            <a href="<%= service_path(s.id) %>" class="btn btn-info btn-sm" role="button">Show Service</a>
            <a href="<%= edit_service_path(s.id) %>" class="btn btn-info btn-sm" role="button">Edit Service</a>
            <a href="<%= service_path(s.id)%>" data-method="delete" class="btn btn-info btn-sm" role="button">Delete Service</a></p>
          <% else %>
            <a href="<%= service_path(s.id) %>" class="btn btn-info btn-sm" role="button">Show Service</a> 
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

