<p id="notice"><%= notice %></p>

<h1>Listing Services</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>User</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |s| %>
      <tr>
        <td><%= s.title %></td>
        <td><%= s.description %></td>
        <td><%= s.category %></td>
        <td><%= s.username %></td>
        <td><%= s.price %></td>
        <% if s.user == current_user %>
          <td><%= link_to 'Show', s %></td>
          <td><%= link_to 'Edit', edit_service_path(s) %></td>
          <td><%= link_to 'Destroy', s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

